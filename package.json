{
	"name": "auto-dark-mode-windows",
	"displayName": "auto-dark-mode-windows",
	"description": "Toggle theme to dark/light automatically with Windows 10 dark mode.",
	"repository": {
		"type": "git",
		"url": "https://github.com/danielgjackson/vscode-auto-dark-mode-windows.git"
	},
	"publisher": "danielgjackson",
	"version": "1.0.1",
	"license": "MIT",
	"engines": {
		"vscode": "^1.34.0"
	},
	"icon": "icon.png",
	"keywords": [
		"dark mode",
		"theme",
		"automatic",
		"switch",
		"Windows 10"
	],
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*",
		"onCommand:auto-dark-mode-windows.toggle"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "auto-dark-mode-windows.toggle",
				"title": "Toggle Theme"
			}
		],
		"keybindings": [
			{
				"command": "auto-dark-mode-windows.toggle",
				"key": "ctrl+alt+shift+t",
				"mac": "cmd+alt+shift+t"
			}
		],
		"configuration": {
			"title": "Auto Dark Mode (Windows)",
			"properties": {
				"autoDarkMode.darkTheme": {
					"type": "string",
					"default": "Default Dark+",
					"description": "Specifies which theme is to be shown when dark mode is on."
				},
				"autoDarkMode.lightTheme": {
					"type": "string",
					"default": "Default Light+",
					"description": "Specifies which theme is to be shown when dark mode is off."
				}
			}
		}
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test",
		"vscode:prepublish": "build.cmd"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"eslint": "^5.13.0",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
